// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
}

model Admin {
  id              String   @id @default(uuid())
  email           String   @unique
  name            String
  password        String
  dateBirth       DateTime
  address         String
  phone           String
  role            String
  descriptionRole String?
  registerCode    String
  gender          Gender

  accessId Int
  access   Access @relation(fields: [accessId], references: [level])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Employee {
  id              String   @id @default(uuid())
  email           String   @unique
  name            String
  password        String
  dateBirth       DateTime
  address         String
  phone           String
  role            String
  descriptionRole String?
  registerCode    String
  gender          Gender

  accessId Int
  access   Access @relation(fields: [accessId], references: [level])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Patient {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  dateBirth DateTime
  address   String
  phone     String
  gender    Gender

  accessId Int
  access   Access @relation(fields: [accessId], references: [level])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Access {
  id        String   @id @default(uuid())
  name      String
  level     Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Admin    Admin[]
  Patient  Patient[]
  Employee Employee[]
}
